

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id    Int      @id @default(autoincrement())
  name  String
  items Sneaker[]
}

model Sneaker {
  id        Int     @id @default(autoincrement())
  name      String
  price     Float
  condition String
  size      Int?
  category  Category @relation(fields: [categoryId], references: [id])
  categoryId Int
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     String @default("USER")
}

enum Role {
  USER
  ADMIN
}
