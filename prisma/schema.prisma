datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id    Int      @id @default(autoincrement())
  name  String
  items PalladiumShoe[]
}

model PalladiumShoe {
  id          Int     @id @default(autoincrement())
  name        String
  price       Float
  condition   String
  size        Int?
  description String
  imageUrl    String
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  role     String   @default("user") // 'user' or 'admin'
}
